<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:gui="clr-namespace:CNLab3_Messenger.GUI">
    <DataTemplate DataType="{x:Type gui:ContactViewModel}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="{Binding AddressStrRepr}"/>
            <TextBlock Grid.Column="1" Margin="10 0 0 0"
                                    Text="{Binding Connected}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>